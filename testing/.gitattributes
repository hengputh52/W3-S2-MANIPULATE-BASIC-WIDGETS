# Auto detect text files and perform LF normalization
* text=auto eol=lf

# All text files use LF
*.dart text eol=lf
*.swift text eol=lf
*.cc text eol=lf
*.cpp text eol=lf
*.h text eol=lf
*.cmake text eol=lf

# Config files
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.xml text eol=lf
*.plist text eol=lf
*.xcconfig text eol=lf

# Lock files
pubspec.lock text eol=lf

# Windows specific
*.bat text eol=crlf
*.ps1 text eol=crlf
